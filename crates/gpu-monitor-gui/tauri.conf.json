{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GPU Monitor",
  "version": "0.1.0",
  "identifier": "com.gpumonitor.app",
  "build": {
    "frontendDist": "src-web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": null,
    "beforeBuildCommand": null
  },
  "app": {
    "windows": [
      {
        "title": "GPU Monitor",
        "width": 900,
        "height": 700,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 500,
        "decorations": true,
        "transparent": true,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [],
        "section": "utils"
      }
    }
  }
}
